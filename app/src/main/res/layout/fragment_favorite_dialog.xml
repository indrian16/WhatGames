<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/favorite_dialog_size"
    android:layout_height="@dimen/favorite_dialog_size"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dialogs.FavoriteDialogFragment"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_fileName="add_favorite_anim.json"
            android:scaleType="centerCrop"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>